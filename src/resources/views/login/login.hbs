<div class="login js-login">
      <div class="login-container">
          <div class="model-close">
                <a href="/" class="ti-close"></a>
          </div>
            <h2 class="header-login">XIN CHÀO BẠN</h2>
            <h3 class="header-login">Đăng nhập để tiếp tục</h3>
            <div class="login-body">     
                <input class="user-login" autocomplete="username" type="text" placeholder="Tên đăng nhập" id="username" name="username" >
             
                <input class="pass-login" autocomplete="current-password" type="password" placeholder="Mật khẩu" id="password" name="password">
               
                <input class="submit-login" type="submit" value="Đăng nhập">

                <button class="fb-btn-signin">
                  <a href="" class="ti-facebook"></a>
                    Facebook
                </button>
                <button class="gg-btn-signin">
                  <a href="" class="ti-google"></a>
                    Google
                </button>
              </form>
            </div>
      </div>
</div>

<script>
  const inputUsername = document.querySelector(".user-login");
  const inputPassword = document.querySelector(".pass-login");
  const btnLogin = document.querySelector(".submit-login");

btnLogin.addEventListener("click", (e) => {
  e.preventDefault();
  if (inputUsername.value === "" || inputPassword.value === "") {
    alert("vui lòng không để trống");
  } else {
    const user = JSON.parse(localStorage.getItem(inputUsername.value));
    if (
      user.username === inputUsername.value &&
      user.password === inputPassword.value
    ) {
      alert("Đăng Nhập Thành Công");
      window.location.href = "main.hbs";
    } else {
      alert("Đăng Nhập Thất Bại");
    }
  }
});
</script>
